@model IEnumerable<Market.Models.VerificationRequest>
<h2>Weryfikacje użytkowników</h2>
<form method="get" class="mb-3">
    <select name="status" class="form-select" style="max-width:220px" onchange="this.form.submit()">
        <option selected="@(ViewBag.Filter=="Pending")">Pending</option>
        <option selected="@(ViewBag.Filter=="Verified")">Verified</option>
        <option selected="@(ViewBag.Filter=="Rejected")">Rejected</option>
    </select>
</form>
<table class="table table-sm align-middle">
    <thead><tr><th>Użytkownik</th><th>Złożono</th><th>Status</th><th></th></tr></thead>
    <tbody>
    @foreach (var v in Model)
    {
        <tr>
            <td>@(v.User?.Email ?? v.UserId)</td>
            <td>@v.SubmittedUtc.ToLocalTime()</td>
            <td>@v.Status</td>
            <td><a asp-action="Review" asp-route-id="@v.Id" class="btn btn-primary btn-sm">Otwórz</a></td>
        </tr>
    }
    </tbody>
</table>