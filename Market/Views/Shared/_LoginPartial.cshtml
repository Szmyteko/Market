@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var uid = UserManager.GetUserId(User);
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">
                @User.Identity!.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" asp-controller="Property" asp-action="Index">Ogłoszenia</a></li>
                <li><a class="dropdown-item" asp-controller="Property" asp-action="MyListings">Moje lokale</a></li>
                <li><a class="dropdown-item" asp-controller="RentalRequest" asp-action="MyRentals">Moje najmy</a></li>
                <li><a class="dropdown-item" asp-controller="Payment" asp-action="Index">Płatności</a></li>
                <li><a class="dropdown-item" asp-controller="Profiles" asp-action="Owner" asp-route-id="@uid">Mój profil</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Konto</a></li>
                <li>
                    <form class="dropdown-item p-0" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                        <button type="submit" class="dropdown-item">Wyloguj</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>