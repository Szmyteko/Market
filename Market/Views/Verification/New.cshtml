@{ ViewData["Title"]="Weryfikacja tożsamości"; }
<h2>@ViewData["Title"]</h2>
<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Przód dowodu</label>
        <input class="form-control" type="file" name="front" accept="image/*" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Tył dowodu</label>
        <input class="form-control" type="file" name="back" accept="image/*" required />
    </div>
    <button class="btn btn-primary" type="submit">Wyślij</button>
</form>