@model IEnumerable<dynamic>

@{
    ViewBag.Title = "Lista użytkowników";
}

<h2>Lista użytkowników</h2>

<table class="table">
    <thead>
    <tr>
        <th>Nazwa użytkownika</th>
        <th>Email</th>
        <th>Numer telefonu</th>
        <th>Role</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.User.UserName</td>
            <td>@user.User.Email</td>
            <td>@user.User.PhoneNumber</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td class="d-flex gap-2">
                <a asp-controller="Profiles" asp-action="Owner" asp-route-id="@user.User.Id"
                   class="btn btn-outline-secondary btn-sm">Profil</a>
                <a asp-action="Edit" asp-route-id="@user.User.Id" class="btn btn-success btn-sm">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@user.User.Id" class="btn btn-danger btn-sm">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Utwórz użytkownika</a>