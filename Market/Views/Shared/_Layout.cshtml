@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APT_Market</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/APT_Market.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">APT_Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Strona główna</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Property" asp-action="Index">Ogłoszenia</a>
                    </li>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="lokaleDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Lokale
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="lokaleDrop">
                                <li><a class="dropdown-item" asp-controller="Property" asp-action="MyListings">Moje lokale</a></li>
                                <li><a class="dropdown-item" asp-controller="Property" asp-action="MyListings" asp-route-filter="archived">Archiwalne lokale</a></li>
                                <li><a class="dropdown-item" asp-controller="RentalRequest" asp-action="OwnerInbox">Zgłoszenia do moich lokali</a></li>
                                <li><a class="dropdown-item" asp-controller="Maintenance" asp-action="Index">Zgłoszenia serwisowe</a></li>
                                <li><a class="dropdown-item" asp-controller="Payment" asp-action="Owner">Płatności lokali</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Conversations" asp-action="Index">Wiadomości</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="najmyDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Najmy
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="najmyDrop">
                                <li><a class="dropdown-item" asp-controller="RentalRequest" asp-action="MyRentals">Moje najmy</a></li>
                                <li><a class="dropdown-item" asp-controller="RentalAgreement" asp-action="ArchivedRentals">Moje zakończone najmy</a></li>
                                <li><a class="dropdown-item" asp-controller="Payment" asp-action="Index">Płatności</a></li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Administracja
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDrop">
                                <li><a class="dropdown-item" asp-controller="AdminModeration" asp-action="Queue">Moderacja ogłoszeń</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminUserVerification" asp-action="Index">Weryfikacje</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminPanel" asp-action="Index">Panel administracyjny</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

@{
    var isHome = (ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
                  && ViewContext.RouteData.Values["action"]?.ToString() == "Index");
}



    @RenderBody()
</main>

<footer class="footer text-muted">
    <div class="container py-3">
        &copy; 2024 - APT_Market (Jakub Stroiński, Szymon Szymkowiak) -
        <a asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
