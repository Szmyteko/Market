@model Market.Models.PropertyUpdateDto
@{
    ViewData["Title"] = "Edycja lokalu";
    var active = ViewBag.ActiveAgreement as Market.Models.RentalAgreement;
}

<h2>@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-body">
        <h5>Obecny najem</h5>
        @if (active is null)
        {
            <p>Brak aktywnego najmu.</p>
        }
        else
        {
            <p>
                Najemca: @active.Tenant?.Email<br />
                Okres: @active.StartDate.ToString("yyyy-MM-dd")
                @if (active.EndDate is not null)
                {
                    @: – @active.EndDate.Value.ToString("yyyy-MM-dd")
                }
                else
                {
                    @: – bez daty zakończenia
                }
            </p>
            <form asp-action="CloseActiveRental" method="post" class="mt-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="propertyId" value="@Model.Id" />
                <button type="submit" class="btn btn-warning btn-sm">Zwolnij lokal</button>
            </form>
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RentPrice" class="form-label"></label>
                <input asp-for="RentPrice" class="form-control" />
                <span asp-validation-for="RentPrice" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="MyListings" class="btn btn-secondary">Anuluj</a>
        </form>
    </div>
</div>
<h5 class="mt-4">Zdjęcia</h5>
<form asp-action="UploadImages" method="post" enctype="multipart/form-data" class="mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="file" name="files" multiple accept="image/*" class="form-control mb-2" />
    <button type="submit" class="btn btn-sm btn-primary">Dodaj zdjęcia</button>
</form>

@if ((ViewBag.Images as IEnumerable<Market.Models.PropertyImage>)?.Any() == true)
{
    <div class="row g-2">
        @foreach (var img in (IEnumerable<Market.Models.PropertyImage>)ViewBag.Images)
        {
            <div class="col-6 col-md-3">
                <div class="card">
                    <img src="@img.Url" class="card-img-top" alt="foto" />
                    <div class="card-body p-2 text-center">
                        <form asp-action="DeleteImage" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="imageId" value="@img.Id" />
                            <button class="btn btn-sm btn-outline-danger">Usuń</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
