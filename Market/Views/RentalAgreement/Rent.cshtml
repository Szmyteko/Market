@model Market.Models.RentalAgreement

<h2>Wynajem lokalu</h2>

<div>
    <h4>Adres: @Model.Property.Address</h4>
    <p>Cena najmu: @Model.Property.RentPrice zł</p>
    <p>Metraż: @Model.Property.Size m²</p>
</div>

<form asp-action="Rent" method="post">
    <input type="hidden" asp-for="PropertyId" />
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <p></p>
    <button type="submit" class="btn btn-primary">Wynajmij</button>
</form>